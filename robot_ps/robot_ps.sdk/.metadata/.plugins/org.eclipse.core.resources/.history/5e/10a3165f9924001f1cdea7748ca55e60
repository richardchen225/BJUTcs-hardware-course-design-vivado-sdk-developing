//OLED闁跨喐鏋婚幏鐑芥晸閻ㄥ棜鎻幏锟�
//闁跨喐鏋婚幏鐑藉紬闁跨喓绮搁弬銈嗗闁跨喐鏋婚幏鐑芥晸閿燂拷.
//[0]0 1 2 3 ... 127
//[1]0 1 2 3 ... 127
//[2]0 1 2 3 ... 127
//[3]0 1 2 3 ... 127
//[4]0 1 2 3 ... 127
//[5]0 1 2 3 ... 127
//[6]0 1 2 3 ... 127
//[7]0 1 2 3 ... 127

void OLED_WR_Byte(u8 dat, u8 cmd) {
	while (1) {
		if (!OLED_BUSY_Set()) {

			OLED_Data_Clr();
			//OLED_RST_Clr();
			OLED_Data_Set(dat);

			if (cmd) {
				OLED_DC_Set();
			} else {
				OLED_DC_Clr();
			}

			//OLED_RST_Set();
			OLED_TRI_Set();

			while (!OLED_BUSY_Set()) {

			}

			OLED_TRI_Clr();
			break;
		}

	}

}

void OLED_Set_Pos(unsigned char x, unsigned char y) {
	OLED_WR_Byte(0xb0 + y, OLED_CMD);
	OLED_WR_Byte(((x & 0xf0) >> 4) | 0x10, OLED_CMD);
	OLED_WR_Byte((x & 0x0f) | 0x01, OLED_CMD);
}
//闁跨喐鏋婚幏鐑芥晸閺傘倖瀚筄LED闁跨喐鏋婚幏椋庛仛
void OLED_Display_On(void) {
	OLED_WR_Byte(0X8D, OLED_CMD);  //SET DCDC闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
	OLED_WR_Byte(0X14, OLED_CMD);  //DCDC ON
	OLED_WR_Byte(0XAF, OLED_CMD);  //DISPLAY ON
}
//闁跨喐鍩呴幉瀣OLED闁跨喐鏋婚幏椋庛仛
void OLED_Display_Off(void) {
	OLED_WR_Byte(0X8D, OLED_CMD);  //SET DCDC闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
	OLED_WR_Byte(0X10, OLED_CMD);  //DCDC OFF
	OLED_WR_Byte(0XAE, OLED_CMD);  //DISPLAY OFF
}
//闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹风兘鏁撻弬銈嗗,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹凤拷,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹峰嘲绠烽柨鐔活潡閻氬瓨瀚归懝鏌ユ晸閺傘倖瀚�!闁跨喐鏋婚幏閿嬬梾闁跨喐鏋婚幏鐑芥晸閺傘倖瀚规稉锟介柨鐔告灮閹凤拷!!!
void OLED_Clear(void) {
	u8 i, n;
	for (i = 0; i < 8; i++) {
		OLED_WR_Byte(0xb0 + i, OLED_CMD); //闁跨喐鏋婚幏鐑芥晸閺傘倖瀚规い鐢告晸閺傘倖瀚归崸锟介柨鐔告灮閹凤拷0~7闁跨喐鏋婚幏锟�
		OLED_WR_Byte(0x00, OLED_CMD); //闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹烽銇氭担宥夋晸閻偀妲勯幏鐑芥晸閸欘偂缍嗙喊澶嬪閸э拷
		OLED_WR_Byte(0x10, OLED_CMD); //闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹烽銇氭担宥夋晸閻偀妲勯幏鐑芥晸閸欘偊鐝喊澶嬪閸э拷
		for (n = 0; n < 128; n++)
			OLED_WR_Byte(0, OLED_DATA);
	} //闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹烽銇�
}

//闁跨喐鏋婚幏閿嬪瘹闁跨喐鏋婚幏铚傜秴闁跨喐鏋婚幏鐑芥晸閺傘倖瀚圭粈杞扮闁跨喐鏋婚幏鐑芥晸鐞涙鍤栭幏锟�,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹风兘鏁撻弬銈嗗闁跨喕顢滈崙銈嗗
//x:0~127
//y:0~63
//mode:0,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹烽銇�;1,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹烽銇�
//size:闁鏁撻弬銈嗗闁跨喐鏋婚幏鐑芥晸閺傘倖瀚� 16/12
void OLED_ShowChar(u8 x, u8 y, u8 chr) {
	unsigned char c = 0, i = 0;
	c = chr - ' '; //闁跨喓鐓喊澶嬪閸嬪繘鏁撻悪锛勫皑閹风兘鏁撶悰妤嬫嫹
	if (x > Max_Column - 1) {
		x = 0;
		y = y + 2;
	}
	if (SIZE == 16) {
		OLED_Set_Pos(x, y);
		for (i = 0; i < 8; i++)
			OLED_WR_Byte(F8X16[c * 16 + i], OLED_DATA);
		OLED_Set_Pos(x, y + 1);
		for (i = 0; i < 8; i++)
			OLED_WR_Byte(F8X16[c * 16 + i + 8], OLED_DATA);
	} else {
		OLED_Set_Pos(x, y + 1);
		for (i = 0; i < 6; i++)
			OLED_WR_Byte(F6x8[c][i], OLED_DATA);

	}
}
//m^n闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
u32 oled_pow(u8 m, u8 n) {
	u32 result = 1;
	while (n--)
		result *= m;
	return result;
}
//闁跨喐鏋婚幏椋庛仛2闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹凤拷
//x,y :闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹风兘鏁撻敓锟�
//len :闁跨喐鏋婚幏鐑芥晸鐞涙顣幏铚傜秴闁跨喐鏋婚幏锟�
//size:闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔峰建閿燂拷
//mode:濡�崇础	0,闁跨喐鏋婚幏鐑芥晸娓氥儻鍚夐敓锟�;1,闁跨喐鏋婚幏鐑芥晸閺傘倖瀚瑰Ο鈥崇础
//num:闁跨喐鏋婚幏宄帮拷锟�(0~4294967295);
void OLED_ShowNum(u8 x, u8 y, u32 num, u8 len, u8 size) {
	u8 t, temp;
	u8 enshow = 0;
	for (t = 0; t < len; t++) {
		temp = (num / oled_pow(10, len - t - 1)) % 10;
		if (enshow == 0 && t < (len - 1)) {
			if (temp == 0) {
				OLED_ShowChar(x + (size / 2) * t, y, ' ');
				continue;
			} else
				enshow = 1;

		}
		OLED_ShowChar(x + (size / 2) * t, y, temp + '0');
	}
}
//闁跨喐鏋婚幏椋庛仛娑擄拷闁跨喐鏋婚幏鐑芥晸鐞涙鍤栭幏鐑芥晸閼存俺鎻幏锟�
void OLED_ShowString(u8 x, u8 y, u8 *chr) {
	unsigned char j = 0;
	while (chr[j] != '\0') {
		OLED_ShowChar(x, y, chr[j]);
		x += 8;
		if (x > 120) {
			x = 0;
			y += 2;
		}
		j++;
	}
}
//闁跨喐鏋婚幏椋庛仛闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
void OLED_ShowCHinese(u8 x, u8 y, u8 no) {
	u8 t, adder = 0;
	OLED_Set_Pos(x, y);
	for (t = 0; t < 16; t++) {
		OLED_WR_Byte(Hzk[2 * no][t], OLED_DATA);
		adder += 1;
	}
	OLED_Set_Pos(x, y + 1);
	for (t = 0; t < 16; t++) {
		OLED_WR_Byte(Hzk[2 * no + 1][t], OLED_DATA);
		adder += 1;
	}
}
/***********闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹风兘鏁撻弬銈嗗闁跨喐鏋婚幏鐑芥晸閺傘倖瀚圭粈娲晸閺傘倖瀚圭粈绡塎P閸ュ墽澧�128闁跨喐鏋婚幏锟�64闁跨喐鏋婚幏宄邦潗闁跨喐鏋婚幏鐑芥晸閺傘倖瀚归柨鐔告灮閹凤拷(x,y),x闁跨喍鑼庨崙銈嗗閸ワ拷0闁跨喐鏋婚幏锟�127闁跨喐鏋婚幏绌ｆ稉娲�夐柨鐔惰寧閸戙倖瀚归崶锟�0闁跨喐鏋婚幏锟�7*****************/
void OLED_DrawBMP(unsigned char x0, unsigned char y0, unsigned char x1,
		unsigned char y1, unsigned char BMP[]) {
	unsigned int j = 0;
	unsigned char x, y;

	if (y1 % 8 == 0)
		y = y1 / 8;
	else
		y = y1 / 8 + 1;
	for (y = y0; y < y1; y++) {
		OLED_Set_Pos(x0, y);
		for (x = x0; x < x1; x++) {
			OLED_WR_Byte(BMP[j++], OLED_DATA);
		}
	}
}

//闁跨喐鏋婚幏宄邦潗闁跨喐鏋婚幏绋碨D1306
void OLED_Init(void) {
	OLED_RST_Clr();
	usleep(1000);
	OLED_RST_Set();
	usleep(1000);

	OLED_WR_Byte(0xAE, OLED_CMD); //--turn off oled panel

	OLED_WR_Byte(0x00, OLED_CMD); //---set low column address
	OLED_WR_Byte(0x10, OLED_CMD); //---set high column address
	OLED_WR_Byte(0x40, OLED_CMD); //--set start line address  Set Mapping RAM Display Start Line (0x00~0x3F)
	OLED_WR_Byte(0x81, OLED_CMD); //--set contrast control register
	OLED_WR_Byte(0xCF, OLED_CMD); // Set SEG Output Current Brightness
	OLED_WR_Byte(0xA1, OLED_CMD); //--Set SEG/Column Mapping     0xa0闁跨喐鏋婚幏鐑芥晸閹活厼鍤栭幏鐑芥晸閺傘倖瀚� 0xa1闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
	OLED_WR_Byte(0xC8, OLED_CMD); //Set COM/Row Scan Direction   0xc0闁跨喐鏋婚幏鐑芥晸闁炬澘鍤栭幏鐑芥晸閺傘倖瀚� 0xc8闁跨喐鏋婚幏鐑芥晸閺傘倖瀚�
	OLED_WR_Byte(0xA6, OLED_CMD); //--set normal display
	OLED_WR_Byte(0xA8, OLED_CMD); //--set multiplex ratio(1 to 64)
	OLED_WR_Byte(0x3f, OLED_CMD); //--1/64 duty
	OLED_WR_Byte(0xD3, OLED_CMD); //-set display offset	Shift Mapping RAM Counter (0x00~0x3F)
	OLED_WR_Byte(0x00, OLED_CMD); //-not offset
	OLED_WR_Byte(0xd5, OLED_CMD); //--set display clock divide ratio/oscillator frequency
	OLED_WR_Byte(0x80, OLED_CMD); //--set divide ratio, Set Clock as 100 Frames/Sec
	OLED_WR_Byte(0xD9, OLED_CMD); //--set pre-charge period
	OLED_WR_Byte(0xF1, OLED_CMD); //Set Pre-Charge as 15 Clocks & Discharge as 1 Clock
	OLED_WR_Byte(0xDA, OLED_CMD); //--set com pins hardware configuration
	OLED_WR_Byte(0x12, OLED_CMD);
	OLED_WR_Byte(0xDB, OLED_CMD); //--set vcomh
	OLED_WR_Byte(0x40, OLED_CMD); //Set VCOM Deselect Level
	OLED_WR_Byte(0x20, OLED_CMD); //-Set Page Addressing Mode (0x00/0x01/0x02)
	OLED_WR_Byte(0x02, OLED_CMD); //
	OLED_WR_Byte(0x8D, OLED_CMD); //--set Charge Pump enable/disable
	OLED_WR_Byte(0x14, OLED_CMD); //--set(0x10) disable
	OLED_WR_Byte(0xA4, OLED_CMD); // Disable Entire Display On (0xa4/0xa5)
	OLED_WR_Byte(0xA6, OLED_CMD); // Disable Inverse Display On (0xa6/a7)
	OLED_WR_Byte(0xAF, OLED_CMD); //--turn on oled panel

	OLED_WR_Byte(0xAF, OLED_CMD); /*display ON*/

	OLED_Clear();
	OLED_Set_Pos(0, 0);
}

void robot_vs_human(int sr, int sh) {
	OLED_Init();
	OLED_ShowCHinese(0, 0, 7);
	OLED_ShowCHinese(15, 0, 8);
	OLED_ShowCHinese(30, 0, 9);
	OLED_ShowCHinese(55, 0, 10);
	OLED_ShowCHinese(70, 0, 11);
	OLED_ShowCHinese(95, 0, 12);
	OLED_ShowCHinese(110, 0, 13);
	OLED_ShowNum(0, 4, sr, 3, 36);
	OLED_ShowNum(85, 4, sh, 3, 36);
	OLED_ShowChar(57, 3, 'v');
	OLED_ShowChar(62, 4, 's');
	sleep(3);
	OLED_ShowChar(30, 3, 'W');
	OLED_ShowChar(60, 3, 'I');
	OLED_ShowChar(90, 3, 'N');
	sleep(3);
	OLED_ShowCHinese(0, 0, 7);
	OLED_ShowCHinese(15, 0, 8);
	OLED_ShowCHinese(30, 0, 9);
	OLED_ShowCHinese(55, 0, 10);
	OLED_ShowCHinese(70, 0, 11);
	OLED_ShowCHinese(95, 0, 12);
	OLED_ShowCHinese(110, 0, 13);
	OLED_ShowNum(0, 4, sr, 3, 36);
	OLED_ShowNum(85, 4, sh, 3, 36);
	OLED_ShowChar(57, 3, 'v');
	OLED_ShowChar(62, 4, 's');

}

void robot_win() {
	OLED_Init();
	OLED_ShowCHinese(8, 3, 14);
	OLED_ShowCHinese(23, 3, 15);
	OLED_ShowCHinese(38, 3, 16);
	OLED_ShowCHinese(53, 3, 17);
	OLED_ShowCHinese(68, 3, 18);
	OLED_ShowCHinese(83, 3, 19);
	OLED_ShowCHinese(98, 3, 20);
	OLED_ShowString(113, 3, "!");
}

void human_win() {
	OLED_Init();
	OLED_ShowCHinese(15, 3, 21);
	OLED_ShowCHinese(30, 3, 22);
	OLED_ShowCHinese(45, 3, 23);
	OLED_ShowCHinese(60, 3, 24);
	OLED_ShowCHinese(75, 3, 25);
	OLED_ShowCHinese(90, 3, 26);
	//OLED_ShowString(105, 3, '!');
}
